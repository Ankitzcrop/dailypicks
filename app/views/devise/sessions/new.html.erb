<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-5" style="max-width: 400px; width: 100%; border-radius: 15px; border: none;">
    <div class="text-center mb-4">
      <i class="fas fa-user-circle" style="font-size: 3rem; color: #6a11cb;"></i>
      <h2 class="mt-2" style="font-weight: bold; color: #333;">Log In</h2>
      <p style="font-size: 0.9rem; color: #555;">Welcome back! Please login to your account.</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      <div class="form-group mb-3 position-relative">
        <i class="fas fa-envelope position-absolute" style="top: 50%; left: 10px; transform: translateY(-50%); color: #6a11cb;"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control pl-5", placeholder: "Enter your email",
                          style: "border-radius: 10px; border: 1px solid #ddd; padding-left: 35px;" %>
      </div>

      <div class="form-group mb-3 position-relative">
        <i class="fas fa-lock position-absolute" style="top: 50%; left: 10px; transform: translateY(-50%); color: #6a11cb;"></i>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control pl-5", placeholder: "Enter your password",
                             style: "border-radius: 10px; border: 1px solid #ddd; padding-left: 35px;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3 text-start">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "Remember Me", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Log In", class: "btn btn-primary btn-block", 
                     style: "border-radius: 10px; background: linear-gradient(to right, #6a11cb, #2575fc); border: none; padding: 10px; font-size: 1rem;" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <a href="#" class="text-decoration-none" style="color: #6a11cb;">Forgot Password?</a>
    </div>

    <hr class="my-4" style="border-top: 1px solid #ddd;">
    <div class="text-center">
      <p style="font-size: 0.9rem; color: #555;">Don't have an account? 
        <%= link_to 'Sign up now', new_registration_path(resource_name), class: "text-primary fw-bold text-decoration-none" %>
      </p>
    </div>
  </div>
</div>
