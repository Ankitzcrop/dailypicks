          <a href="#" class="text-dark"><%= image_tag 'pajamas_twitter.svg', alt: 'pajamas_twitter.svg' %></a>
          <a href="#" class="text-dark"><%= image_tag 'mdi_linkedin.svg', alt: 'mdi_linkedin.svg' %></a>
        </div>
      </div>

      <!-- Links Columns -->
      <div class="col-md-2 mb-4 ">
        <h6 class="fw-bold">Find it fast</h6>
