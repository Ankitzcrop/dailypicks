<footer class="bg-white text-dark my-5 ">
  <!-- Newsletter Section -->
  <div class="bg-brown text-white py-3 border-bottom">
    <div class="container-fluid">
      <div class="row align-items-center mx-3">
        <!-- Logo -->
        <div class="col-md-3  text-md-start mb-3 mb-md-0">
          <%= image_tag 'logo_white.svg', alt: 'DailyPicks Logo', style: 'width: 80%; height: auto;' %>
        </div>
        <!-- Newsletter -->
        <div class="col-md-5  mb-3 mb-md-0">
          <h5 class="mb-1 fw-bold">Sign up to Newsletter</h5>
          <p class="mb-2">Subscribe to our newsletter to get updates on our latest offers!</p>
        </div>
        <!-- Email Signup -->
        <div class="col-md-4 text-md-end">
          <form class="d-flex align-items-center search-bar form-group">
            <!-- Search Input -->
            <input
              class="form-control rounded-start-pill search-input"
              type="search"
              placeholder="Email Address"
              aria-label="Search"
              style="height: 40px; font-size: 14px; "
            />

            <!-- Search Button -->
            <button
              type="submit"
              class="btn btn-signup  text-white fw-bold d-flex align-items-center justify-content-center rounded-end-pill"
              style="height: 40px; width: 90px; padding: 0; background-color: transparent;"
            >
             sign up
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

