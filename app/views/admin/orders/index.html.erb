<div class="card shadow-sm border-0">
  <div class="card-body">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold mb-0">All Orders</h4>
      <span class="text-muted small">
        Total Orders: <%= @orders.count %>
      </span>
    </div>

    <div class="table-responsive">
      <table class="table align-middle table-hover">
        <thead class="table-light">
          <tr class="text-muted small text-uppercase">
            <th>Order ID</th>
            <th>User</th>
            <th>Total</th>
            <th>Status</th>
            <th>Date</th>
            <th class="text-end">Action</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="fw-semibold">#<%= order.id %></td>

              <td>
                <div class="fw-semibold"><%= order.user.email %></div>
              </td>

              <td class="fw-semibold text-success">
                â‚± <%= order.total_amount %>
              </td>

              <td>
                <span class="badge status-badge
                  <%= case order.status
                      when "pending" then "bg-warning text-dark"
                      when "confirmed" then "bg-info"
                      when "shipped" then "bg-primary"
                      when "delivered" then "bg-success"
                      when "cancelled" then "bg-danger"
                      else "bg-secondary"
                      end %>">
                  <%= order.status.capitalize %>
                </span>
              </td>

              <td class="text-muted">
                <%= order.created_at.strftime("%d %b %Y") %>
              </td>

              <td class="text-end">
                <%= link_to "View",
                      admin_order_path(order),
                      class: "btn btn-sm btn-outline-primary px-3" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
<style>
  .status-badge {
    padding: 6px 14px;
    font-size: 13px;
    font-weight: 600;
    border-radius: 20px;
    display: inline-block;
    min-width: 90px;
    text-align: center;
  }
</style>